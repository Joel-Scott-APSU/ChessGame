<Window x:Class="ChessGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chess Game"
        SizeToContent="WidthAndHeight"
        Background="Black">
    <Viewbox Stretch="Uniform">
        <Grid Width="480" Height="480" HorizontalAlignment="Center" VerticalAlignment="Center">
            <!-- Outer Border -->
            <Border Name="OuterBorder">
                <Border.Background>
                    <ImageBrush ImageSource="pack://application:,,,/Textures/WoodTexture.jpg" TileMode="Tile" Viewport="0,0,25,25" ViewportUnits="Absolute"/>
                </Border.Background>
                <!-- Row Numbers -->
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="8" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,5,0"/>
                    <TextBlock Text="7" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,5,0"/>
                    <TextBlock Text="6" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,5,0"/>
                    <TextBlock Text="5" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,5,0"/>
                    <TextBlock Text="4" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,5,0"/>
                    <TextBlock Text="3" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,5,0"/>
                    <TextBlock Text="2" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,5,0"/>
                    <TextBlock Text="1" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,5,0"/>
                </StackPanel>
            </Border>

            <!-- Inner Border -->
            <Border Name="InnerBorder" Width="410" Height="410" Background="Beige" Opacity="0.5" HorizontalAlignment="Center" VerticalAlignment="Center"/>

            <!-- Chess Board -->
            <Grid Width="400" Height="400" HorizontalAlignment="Center" VerticalAlignment="Center">
                <!-- Chessboard Squares -->
                <ItemsControl ItemsSource="{Binding ChessBoardSquares}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="8"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Width="50" Height="50">
                                <Border Background="{Binding Background}" Opacity="0.5" Width="50" Height="50"/>
                                <Image Source="{Binding PieceImage}" Stretch="Uniform" Width="50" Height="50" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </Grid>
    </Viewbox>
</Window>
