<Window x:Class="ChessGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        SizeToContent="WidthAndHeight">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Textures/WoodTexture.jpg" TileMode="Tile" Viewport="0,0,25,25" ViewportUnits="Absolute" />
        </Grid.Background>


        <Border Name="OuterBorder" Width="480" Height="480" Background="#6a4a3a" Panel.ZIndex="-2" Opacity="0.5"></Border>

        <Border Name="InnerBorder" Width="410" Height="410" Background="Beige" Panel.ZIndex="-1" Opacity="0.5"></Border>
        <!-- Create the chess board grid -->
        <Grid Width="400" Height="400">
            <!-- Set the background to the wood texture -->
            <Grid.Background>
                <ImageBrush ImageSource="Textures/WoodTexture.jpg" TileMode="Tile" Viewport="0,0,25,25" ViewportUnits="Absolute"/>
            </Grid.Background>



            <!-- Define rows and columns -->
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="50"/>
            </Grid.ColumnDefinitions>

            <!-- Wood grain texture image -->

            <!-- Alternating color squares to create the chessboard pattern -->
            <Rectangle Grid.Row="0" Grid.Column="0" Fill="Beige" Opacity="0.5"/>
            <Rectangle Grid.Row="0" Grid.Column="1" Fill="#6a4a3a" Opacity="0.5"/>
            <Rectangle Grid.Row="0" Grid.Column="2" Fill="Beige" Opacity="0.5"/>
            <Rectangle Grid.Row="0" Grid.Column="3" Fill="#6a4a3a" Opacity="0.5"/>
            <Rectangle Grid.Row="0" Grid.Column="4" Fill="Beige" Opacity="0.5"/>
            <Rectangle Grid.Row="0" Grid.Column="5" Fill="#6a4a3a" Opacity="0.5"/>
            <Rectangle Grid.Row="0" Grid.Column="6" Fill="Beige" Opacity="0.5"/>
            <Rectangle Grid.Row="0" Grid.Column="7" Fill="#6a4a3a" Opacity="0.5"/>

            <Rectangle Grid.Row="1" Grid.Column="0" Fill="#6a4a3a" Opacity="0.5"/>
            <Rectangle Grid.Row="1" Grid.Column="1" Fill="Beige" Opacity="0.5"/>
            <Rectangle Grid.Row="1" Grid.Column="2" Fill="#6a4a3a" Opacity="0.5"/>
            <Rectangle Grid.Row="1" Grid.Column="3" Fill="Beige" Opacity="0.5"/>
            <Rectangle Grid.Row="1" Grid.Column="4" Fill="#6a4a3a" Opacity="0.5"/>
            <Rectangle Grid.Row="1" Grid.Column="5" Fill="Beige" Opacity="0.5"/>
            <Rectangle Grid.Row="1" Grid.Column="6" Fill="#6a4a3a" Opacity="0.5"/>
            <Rectangle Grid.Row="1" Grid.Column="7" Fill="Beige" Opacity="0.5"/>

            <Rectangle Grid.Row="2" Grid.Column="0" Fill="Beige" Opacity="0.5"/>
            <Rectangle Grid.Row="2" Grid.Column="1" Fill="#6a4a3a" Opacity="0.5"/>
            <Rectangle Grid.Row="2" Grid.Column="2" Fill="Beige" Opacity="0.5"/>
            <Rectangle Grid.Row="2" Grid.Column="3" Fill="#6a4a3a" Opacity="0.5"/>
            <Rectangle Grid.Row="2" Grid.Column="4" Fill="Beige" Opacity="0.5"/>
            <Rectangle Grid.Row="2" Grid.Column="5" Fill="#6a4a3a" Opacity="0.5"/>
            <Rectangle Grid.Row="2" Grid.Column="6" Fill="Beige" Opacity="0.5"/>
            <Rectangle Grid.Row="2" Grid.Column="7" Fill="#6a4a3a" Opacity="0.5"/>

            <Rectangle Grid.Row="3" Grid.Column="0" Fill="#6a4a3a" Opacity="0.5"/>
            <Rectangle Grid.Row="3" Grid.Column="1" Fill="Beige" Opacity="0.5"/>
            <Rectangle Grid.Row="3" Grid.Column="2" Fill="#6a4a3a" Opacity="0.5"/>
            <Rectangle Grid.Row="3" Grid.Column="3" Fill="Beige" Opacity="0.5"/>
            <Rectangle Grid.Row="3" Grid.Column="4" Fill="#6a4a3a" Opacity="0.5"/>
            <Rectangle Grid.Row="3" Grid.Column="5" Fill="Beige" Opacity="0.5"/>
            <Rectangle Grid.Row="3" Grid.Column="6" Fill="#6a4a3a" Opacity="0.5"/>
            <Rectangle Grid.Row="3" Grid.Column="7" Fill="Beige" Opacity="0.5"/>

            <Rectangle Grid.Row="4" Grid.Column="0" Fill="Beige" Opacity="0.5"/>
            <Rectangle Grid.Row="4" Grid.Column="1" Fill="#6a4a3a" Opacity="0.5"/>
            <Rectangle Grid.Row="4" Grid.Column="2" Fill="Beige" Opacity="0.5"/>
            <Rectangle Grid.Row="4" Grid.Column="3" Fill="#6a4a3a" Opacity="0.5"/>
            <Rectangle Grid.Row="4" Grid.Column="4" Fill="Beige" Opacity="0.5"/>
            <Rectangle Grid.Row="4" Grid.Column="5" Fill="#6a4a3a" Opacity="0.5"/>
            <Rectangle Grid.Row="4" Grid.Column="6" Fill="Beige" Opacity="0.5"/>
            <Rectangle Grid.Row="4" Grid.Column="7" Fill="#6a4a3a" Opacity="0.5"/>

            <Rectangle Grid.Row="5" Grid.Column="0" Fill="#6a4a3a" Opacity="0.5"/>
            <Rectangle Grid.Row="5" Grid.Column="1" Fill="Beige" Opacity="0.5"/>
            <Rectangle Grid.Row="5" Grid.Column="2" Fill="#6a4a3a" Opacity="0.5"/>
            <Rectangle Grid.Row="5" Grid.Column="3" Fill="Beige" Opacity="0.5"/>
            <Rectangle Grid.Row="5" Grid.Column="4" Fill="#6a4a3a" Opacity="0.5"/>
            <Rectangle Grid.Row="5" Grid.Column="5" Fill="Beige" Opacity="0.5"/>
            <Rectangle Grid.Row="5" Grid.Column="6" Fill="#6a4a3a" Opacity="0.5"/>
            <Rectangle Grid.Row="5" Grid.Column="7" Fill="Beige" Opacity="0.5"/>

            <Rectangle Grid.Row="6" Grid.Column="0" Fill="Beige" Opacity="0.5"/>
            <Rectangle Grid.Row="6" Grid.Column="1" Fill="#6a4a3a" Opacity="0.5"/>
            <Rectangle Grid.Row="6" Grid.Column="2" Fill="Beige" Opacity="0.5"/>
            <Rectangle Grid.Row="6" Grid.Column="3" Fill="#6a4a3a" Opacity="0.5"/>
            <Rectangle Grid.Row="6" Grid.Column="4" Fill="Beige" Opacity="0.5"/>
            <Rectangle Grid.Row="6" Grid.Column="5" Fill="#6a4a3a" Opacity="0.5"/>
            <Rectangle Grid.Row="6" Grid.Column="6" Fill="Beige" Opacity="0.5"/>
            <Rectangle Grid.Row="6" Grid.Column="7" Fill="#6a4a3a" Opacity="0.5"/>

            <Rectangle Grid.Row="7" Grid.Column="0" Fill="#6a4a3a" Opacity="0.5"/>
            <Rectangle Grid.Row="7" Grid.Column="1" Fill="Beige" Opacity="0.5"/>
            <Rectangle Grid.Row="7" Grid.Column="2" Fill="#6a4a3a" Opacity="0.5"/>
            <Rectangle Grid.Row="7" Grid.Column="3" Fill="Beige" Opacity="0.5"/>
            <Rectangle Grid.Row="7" Grid.Column="4" Fill="#6a4a3a" Opacity="0.5"/>
            <Rectangle Grid.Row="7" Grid.Column="5" Fill="Beige" Opacity="0.5"/>
            <Rectangle Grid.Row="7" Grid.Column="6" Fill="#6a4a3a" Opacity="0.5"/>
            <Rectangle Grid.Row="7" Grid.Column="7" Fill="Beige" Opacity="0.5"/>

            <!-- Add the king image -->
            <Border BorderBrush="Transparent" BorderThickness="0">
                <Image Source="ChessPieces/BlackRook.jpg" Stretch="Uniform" Grid.Row="0" Grid.Column="0"/>
            </Border>
        </Grid>
    </Grid>
</Window>
